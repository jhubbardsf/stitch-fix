<p id="notice"><%= notice %></p>

<h1>Listing Items</h1>

<table id="items-index-table" class="table dataTable">
  <thead>
    <tr>
      <th>Id</th>
      <th>Size</th>
      <th>Color</th>
      <th>Status</th>
      <th>Price sold</th>
      <th>Sold at</th>
      <th>Style</th>
      <th>Clearance batch</th>
      <th>Item Details</th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= item.size %></td>
        <td><%= item.color %></td>
        <td><%= item.status %></td>
        <td><%= number_to_currency(item.price_sold) %></td>
        <td><%= number_to_currency(item.sold_at) %></td>
        <td><%= item.style.name %></td>
        <td><%= item.clearance_batch_id %></td>
        <td><%= link_to 'Show', item %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
