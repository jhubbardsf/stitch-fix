<p id="notice"><%= notice %></p>

<h1>Listing Clothings</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Minimum Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clothings.each do |clothing| %>
      <tr>
        <td><%= clothing.name %></td>
        <td><%= number_to_currency(clothing.minimum) %></td>
        <td><%= link_to 'Show', clothing %></td>
        <td><%= link_to 'Edit', edit_clothing_path(clothing) %></td>
        <td><%= link_to 'Destroy', clothing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

